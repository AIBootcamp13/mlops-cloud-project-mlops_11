# docker/.env
# Copy this file to .env and fill in your actual values
# Slack Webhook URLs for AlertManager
SLACK_CRITICAL_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/CRITICAL/WEBHOOK
SLACK_API_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/API/WEBHOOK
SLACK_ML_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/ML/WEBHOOK
SLACK_DEVOPS_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/DEVOPS/WEBHOOK

# SMTP Configuration
SMTP_HOST=localhost:587
SMTP_FROM=alerts@your-domain.com

# Webhook Configuration
WEBHOOK_URL=http://host.docker.internal:8001/alertmanager-webhook

# Environment
ENVIRONMENT=development
LOG_LEVEL=debug
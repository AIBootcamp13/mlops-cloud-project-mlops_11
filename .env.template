# TMDB API 설정
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_REGION=KR
TMDB_LANGUAGE=ko-KR
TMDB_REQUEST_DELAY=0.25
TMDB_MAX_RETRIES=3
TMDB_TIMEOUT=30

# 로깅 설정
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# 데이터 설정
DATA_DIR=data
RAW_DATA_DIR=data/raw
PROCESSED_DATA_DIR=data/processed
BACKUP_DIR=data/backup
MAX_FILE_AGE_DAYS=30
COMPRESSION_ENABLED=true

# 데이터베이스 설정
DATABASE_URL=postgresql://mlops_user:mlops_password@postgres:5432/mlops
DB_HOST=postgres
DB_PORT=5432
DB_NAME=mlops
DB_USER=mlops_user
DB_PASSWORD=mlops_password

# Redis 설정 (2단계 피처 스토어)
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 피처 스토어 설정 (2단계)
FEATURE_STORE_BASE_PATH=/app/data/feature_store
FEATURE_STORE_CACHE_ENABLED=true
FEATURE_STORE_CACHE_MAX_SIZE=100
FEATURE_STORE_CACHE_TTL_SECONDS=3600
FEATURE_STORE_REDIS_ENABLED=true
FEATURE_STORE_METRICS_ENABLED=true
FEATURE_STORE_METRICS_PORT=8000

# FastAPI 설정 (2단계)
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=true
API_LOG_LEVEL=info
API_CORS_ENABLED=true

# Feast 설정 (2단계 - 선택사항)
FEAST_REPO_PATH=/app/feature_repo
FEAST_PROJECT_NAME=movie_mlops
FEAST_ONLINE_STORE_TYPE=sqlite
FEAST_OFFLINE_STORE_TYPE=file

# Prometheus 설정 (2단계 - 선택사항)
PROMETHEUS_PORT=9090
METRICS_ENABLED=true

# Grafana 설정 (2단계 - 선택사항)
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin123

# 스케줄링 설정
SCHEDULER_ENABLED=true
DAILY_COLLECTION_TIME=02:00
WEEKLY_COLLECTION_DAY=sunday
HOURLY_TRENDING_ENABLED=true

# 개발 환경 설정
PYTHONPATH=/app/src
DEVELOPMENT_MODE=true
DEBUG=true
